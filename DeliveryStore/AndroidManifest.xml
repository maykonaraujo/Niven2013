<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.deliverystore"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name="com.deliverystore.MenuPrincipal"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="AcessoSistema"
            android:label="Acesse o Sistema" 
            ></activity>
        <activity android:name="RecuperarSenha"
            android:label="Recuperar Senha" 
            ></activity>
        <activity android:name="CadastroUsuario"
            android:label="Cadastre-se" 
            ></activity>
        <activity android:name="Estabelecimento"></activity>
    </application>

</manifest>
