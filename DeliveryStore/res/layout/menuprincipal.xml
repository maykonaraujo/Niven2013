<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CadastroUsuario" >

    <Spinner
        android:id="@+id/principalBairro"
        android:layout_width="154dp"
        android:layout_height="32dp"
        android:layout_alignLeft="@+id/principalBtPesq"
        android:layout_alignRight="@+id/principalBtLogin"
        android:layout_below="@+id/principalCidade" />

    <Spinner
        android:id="@+id/principalUF"
        android:layout_width="84dp"
        android:layout_height="34dp"
        android:layout_alignLeft="@+id/principalBairro"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/principalBtLogin"
        android:layout_marginTop="22dp" />

    <Spinner
        android:id="@+id/principalCidade"
        android:layout_width="141dp"
        android:layout_height="34dp"
        android:layout_alignLeft="@+id/principalBairro"
        android:layout_alignRight="@+id/principalUF"
        android:layout_below="@+id/principalUF" />

    <Spinner
        android:id="@+id/principalSpinRamo1"
        android:layout_width="84dp"
        android:layout_height="37dp"
        android:layout_alignLeft="@+id/principalBairro"
        android:layout_alignRight="@+id/principalBairro"
        android:layout_below="@+id/principalBairro" />

    <Button
        android:id="@+id/principalBtPesq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/principalSpinRamo1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Buscar" />

    <Button
        android:id="@+id/principalBtLogin"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/principalBtPesq"
        android:layout_below="@+id/principalBtPesq"
        android:layout_marginTop="15dp"
        android:text="Login" />

</RelativeLayout>